<%include ./partials/header %>
<div class="ui main text container">
    <div class="ui huge header">Restaurant Reviewer</div>
    <p>
        <form action ="/blogs" method="GET" class="ui form">
        <div class="form group">
            <input type="text" name="search" placeholder="Restaurant search...." class="form-control">
            <input type="submit" value="Search" class="ui violet button">
        </div>
        </form>
    </p>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%blogs.forEach(function(blog){%>
            <div class="item">
                <div class="image">
                    <img src="<%=blog.image%>">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%=blog._id%>">
                        <%=blog.title%>
                    </a>
                    <div class="meta"><span><%=blog.created.toDateString()%></span></div>
                    <div class="description"><p><%-blog.body.substring(0,100)%>.....</p></div>
                    <div class="extra"><a class="ui floated basic orange button" href="/blogs/<%=blog._id%>">Read More
                    <i class="right chevron icon"></i>
                    </a></div>
                </div>
            </div>
            <%})%>
        </div>
    </div>
</div> 
<%include ./partials/footer %>    